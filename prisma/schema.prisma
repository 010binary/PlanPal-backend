
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("MONGOURI")
}

enum priority {
  HIGH
  MEDIUM
  LOW
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  fullname  String
  email     String   @unique
  occupation String
  password  String
  social    String?
  isVisible Boolean  @default(true)
  image     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  follow follow[]
  todo todo[]
  streak streak[]

}

model follow {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  following String[]
  follower  String[]

  // Relation
  userId    String   @db.ObjectId
  user      User     @relation(fields: [userId], references: [id])
}

model todo {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  day       String
  date      String
  title     String   @unique
  note      String
  status    Boolean  @default(false)
  time      String
  repeat    Boolean @default(false)
  priority  priority
  fnshTime   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relation
  userId    String   @db.ObjectId
  user      User     @relation(fields: [userId], references: [id])
}

model streak {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  count     Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relation
  userId    String   @db.ObjectId
  user      User     @relation(fields: [userId], references: [id])
}

