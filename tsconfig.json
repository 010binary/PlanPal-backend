{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2020",
    "baseUrl": ".",
    "outDir": "dist",
    "sourceMap": true,
    "noImplicitAny": true,
    "paths": {
      "@controller/*": ["./src/controllers/*"],
      "@helpers/*": ["./src/helpers/*"],
      "@utils/*": ["./src/utils/*"],
      "@orm/*": ["./prisma/*"],
      "@middleware/*": ["./src/middleware/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
