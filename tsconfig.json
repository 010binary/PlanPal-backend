{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2020",
    "baseUrl": ".",
    "outDir": "dist",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "declaration": true,
    "paths": {
      "@controller/*": ["./src/controllers/*"],
      "@helpers/*": ["./src/helpers/*"],
      "@utils/*": ["./src/utils/*"],
      "@orm/*": ["./prisma/*"],
      "@middleware/*": ["./src/middleware/*"],
      "@types/*": ["./src/types/*"]
    }
  },
  "include": ["src/**/*", "logs/logger.ts"],
  "exclude": ["node_modules", "dist", "src/tests", "logs"]
}
