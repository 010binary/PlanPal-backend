{
  "compilerOptions": {
    "module": "NodeNext",
    "baseUrl": "src",
    "outDir": "dist",
    "sourceMap": true,
    "noImplicitAny": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"],
  "paths": {
    "@controller/*": ["src/controllers/*"],
    "@helpers/*": ["src/helpers/*"],
    "@utils/*": ["src/utils/*"],
    "@prisma/*": ["prisma/*"],
  }
}
